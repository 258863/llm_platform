# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here
TOKEN_EXPIRE_MINUTES=60
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=your-openai-api-key-here

# Knowledge Base Configuration
KB_STORAGE_PATH=data/knowledge_base
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.md

# System Monitoring
MONITORING_INTERVAL=1
HISTORY_LENGTH=100
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=80
GPU_THRESHOLD=80

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/llm_platform.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
BURST_SIZE=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Configuration
DB_TYPE=sqlite
DB_PATH=data/llm_platform.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_platform
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json 